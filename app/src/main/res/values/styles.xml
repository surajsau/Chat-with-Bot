<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChatTextDialog">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BuyerChatTextDialog" parent="ChatTextDialog">
        <item name="android:background">@drawable/bubble_buyer</item>
    </style>

    <style name="SellerChatTextDialog" parent="ChatTextDialog">
        <item name="android:background">@drawable/bubble_seller</item>
    </style>

</resources>
